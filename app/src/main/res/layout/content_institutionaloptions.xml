<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dgvc.placement.mbafresherrecruitment.Institutionaloptions"
    tools:showIn="@layout/app_bar_institutionaloptions"
    android:orientation="vertical"
    android:layout_marginTop="60dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:onClick="activityeditlist"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="27dp"
             android:text="EDIT STUDENT LIST"
             android:background="@drawable/button_border"
             android:textColor= "@color/colorPrimary"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:textStyle="bold"
             android:id="@+id/io"
             android:paddingLeft="22dp"
             android:paddingRight="24dp"
             android:onClick="activityeditlist"/>
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/editlist"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toRightOf="@id/io"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="6dp"
        android:onClick="selectedstudents"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECTED STUDENTS"
                android:background="@drawable/button_border"
                android:textColor= "@color/colorPrimary"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:id="@+id/io1"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:onClick="selectedstudents"/>
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/shortlistgrey"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/io1"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
</ScrollView>
